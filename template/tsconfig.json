{
  "compilerOptions": {
    "outDir": "build/dist",
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom", "es2017.object"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "baseUrl": "src/",
    "diagnostics": true,
    "pretty": true
  },
  "exclude": [
    "cypress",
    "coverage",
    "node_modules",
    "scripts",
    "build",
    "acceptance-tests",
    "jest",
    "src/setupTests.ts"
  ]
}
